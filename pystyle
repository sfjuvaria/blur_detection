import pathlib
from pathlib import Path

import numpy as np
from skimage import data
import matplotlib.pyplot as plt

def listpaths(data_dir):
  img_list = []
  for path in Path(data_dir).rglob('*.jpg'):
      img_path = path.absolute().as_posix()
      img_list.append(img_path)
  return img_list

def rellistpaths(data_dir):
  img_listr = []
  for path in Path(data_dir).rglob('*.jpg'):
      img_path = path.relative_to(data_dir).as_posix()
      img_listr.append(img_path)
  return img_listr

if __name__ == '__main__':

  # Load data directory folder
  data_dir = '/home/new/Documents/data_imgs'
 
  # List of images with full paths
  il = listpaths(data_dir)
  
  # List of images without paths
  ilr = rellistpaths(data_dir)
  
  